{
   "name": "electron-rollup-boilerplate",
   "version": "1.0.0",
   "description": "this is a electron rollup project skeleton setup",
   "main": "build/main.js",
   "keywords": [
      "electron",
      "rollup"
   ],
   "author": {
      "name": "Pascal Galle"
   },
   "license": "MIT",
   "dependencies": {
      "electron": "^10.1.2",
      "react": "^16.13.1",
      "react-dom": "^16.13.1"
   },
   "devDependencies": {
      "@rollup/plugin-commonjs": "^15.1.0",
      "@rollup/plugin-node-resolve": "^9.0.0",
      "@rollup/plugin-replace": "^2.3.3",
      "@rollup/plugin-typescript": "^6.0.0",
      "@types/react": "^16.9.49",
      "@types/react-dom": "^16.9.8",
      "better-docs": "^2.3.2",
      "electron-builder": "^22.8.1",
      "jsdoc": "^3.6.6",
      "npm-run-all": "^4.1.5",
      "rollup": "^2.28.1",
      "rollup-plugin-copy": "^3.3.0",
      "stylus": "^0.54.8",
      "tslib": "^2.0.1",
      "tslint": "^6.1.3",
      "typescript": "^4.0.3"
   },
   "scripts": {
      "start": "npm-run-all --parallel start:*",
      "start:renderer": "rollup -c -w ",
      "start:electron": "electron .",
      "start:css": "stylus -w ./src/**/*.styl -o ./build/style.css",
      "build": "rollup -c",
      "package": "electron-builder",
      "lint": "tslint --fix -c ./tslint.json 'src/**/*{.js,.jsx,.ts,.tsx}'",
      "doc": "jsdoc -d ./doc -r ./src/main.ts -c jsdoc.json"
   },
   "files": [
      "build"
   ],
   "build": {
      "appId": "studiob12",
      "productName": "App",
      "copyright": "Copyright Â© year StudioB12",
      "directories": {
         "buildResources": "build"
      },
      "files": [
         {
            "from": "build/*",
            "to": "dist",
            "filter": [
               "*.map.*"
            ]
         }
      ],
      "mac": {
         "category": "your.app.category.type"
      }
   }
}
